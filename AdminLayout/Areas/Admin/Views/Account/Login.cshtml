@model AdminLayout.Areas.Admin.Models.LoginModel
@{
    Layout = null;
}
@using System.Web.Optimization

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>

    @Styles.Render("~/bundles/styles")

</head>
<body class="bg-dark">
    <div class="container">
        <div class="card card-login mx-auto mt-5">
            <div class="card-header">Oturum Açınız!</div>
            <div class="card-body">

                <div class="text-danger">@ViewBag.FormResult</div>

                @using (Html.BeginForm())

                {
                    <div class="form-group">
                        <label>E-Posta Adresi</label>
                        @Html.AntiForgeryToken()
                        @Html.TextBoxFor(x => x.EmailAddress, new
                        { @type = "Email", @class = "form-control", @placeholder = "Eposta giriniz." })
                        @Html.ValidationMessageFor(x => x.EmailAddress)
                    </div>
                    <div class="form-group">
                        <label>Parola</label>
                        @Html.TextBoxFor(x => x.Password, new
                        { @type = "password", @class = "form-control", @placeholder = "Parola giriniz." })
                        @Html.ValidationMessageFor(x => x.Password)
                    </div>

                    <div class="form-group">
                        <div class="form-check">
                            <label class="form-check-label">
                                @Html.CheckBoxFor(x => x.RememberMe, new
                                { @class = "form-check-input" }) Beni Unutma! :()
                                
                            </label>
                        </div>
                    </div>

                    <input type="submit" class="btn btn-primary btn-block" name="name" value="Oturum Aç" />
                }

                <div class="text-center">
                    <a class="d-block small mt-3" href="/Admin/Account/Register">Kayıt Ol</a>
                    <a class="d-block small" href="/Admin/Account/ForgetPassword">Parolamı Unuttum!</a>
                </div>
            </div>
        </div>
    </div>
    <!-- Bootstrap core JavaScript-->
    @Scripts.Render("~/bundles/scripts")
</body>
</html>
